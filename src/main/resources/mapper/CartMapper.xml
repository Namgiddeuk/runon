<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ict.finalproject.dao.CartDAO">
    <!-- 사용자의 장바구니 아이템 조회 -->
    <select id="getCartItemsByUsername" parameterType="String" resultType="com.ict.finalproject.vo.CartVO">
        SELECT * FROM cart_tbl WHERE usercode IN (
        SELECT usercode FROM user_tbl WHERE username = #{username}
        )
    </select>

</mapper>
